<h1>Create a New Employee!</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color: red"><%= error %></p>
  <% end %>
<% end %>

<%= form_for @employee do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :value => flash[:first_name] %><br />
    <%= f.label :last_name %>
    <%= f.text_field :last_name, :value => flash[:last_name] %><br />
    <%= f.label :alias %>
    <%= f.text_field :alias, :value => flash[:alias] %><br />
    <%= f.label :office %>
    <%= f.text_field :office, :value => flash[:office] %><br />
    <%= f.label :title %>
    <%= f.text_field :title, :value => flash[:title] %><br />
    <%= f.label :img_url %>
    <%= f.text_field :img_url, :value => flash[:img_url] %><br />
    <%= f.collection_select(:dog_id, @dogs, :id, :name %><br /><br />
    <%= f.submit %>
  <% end %>